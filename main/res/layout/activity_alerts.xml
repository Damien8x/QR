<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alerts">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="235dp"
        android:layout_height="113dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/privacy_pal" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="BACK"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/alert1"
        android:layout_width="388dp"
        android:layout_height="35dp"
        android:layout_marginTop="92dp"
        android:text="Data transfer: EvilCorp --> Tungston Analytics 4/25/19:06:14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/alert2"
        android:layout_width="390dp"
        android:layout_height="34dp"
        android:text="Consent Breach: EvilCorp has exceeded consent 4/18/19:20:18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="398dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text='Consent Breach: Trump Casino has exceeded consent 3/19/19"16:42'
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert2" />

</android.support.constraint.ConstraintLayout>